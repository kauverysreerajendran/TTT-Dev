    classDef database fill:#ffb,stroke:#333,stroke-width:2px;
    classDef queue fill:#fbf,stroke:#333,stroke-width:2px;
    classDef cloud fill:#ff9,stroke:#333,stroke-width:2px;

    class A,B,C ui;
    class D api;
    class E,F,G,H services;
